# Use OpenJDK 17 Alpine base image
FROM openjdk:17-jdk-alpine

# Install bash (optional), git, maven, nodejs, npm, and curl
RUN apk update && apk add --no-cache \
    bash \
    git \
    maven \
    curl

# Expose port 8080
EXPOSE 8090

# Set a working directory (optional, adjust as needed)
WORKDIR /app

COPY ./demo ./demo

WORKDIR /app/demo/
RUN mvn clean package

WORKDIR /app/demo/target
# Just a placeholder command to keep the container running
CMD ["java", "-jar", "demo-1.0.0.jar"]

